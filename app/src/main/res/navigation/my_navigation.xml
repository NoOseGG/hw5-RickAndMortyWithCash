<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_navigation"
    app:startDestination="@id/listFragment">

    <action
        android:id="@+id/to_listFragment"
        app:destination="@id/listFragment"
        app:enterAnim="@anim/anim_slide_out"/>
    <action
        android:id="@+id/to_settingFragment"
        app:destination="@id/settingFragment"
        app:enterAnim="@anim/anim_fade_out"/>

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.rickandmortywithcash.screens.ListFragment"
        android:label="@string/title_actionbar_list_of_character"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_listFragment_to_detailsFragment"
            app:destination="@id/detailsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_exit_anim"/>
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.rickandmortywithcash.screens.DetailsFragment"
        android:label="{characterName}"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="characterName"
            app:argType="string" />
        <action
            android:id="@+id/action_detailsFragment_to_episodeFragment"
            app:destination="@id/episodeFragment"/>
    </fragment>

    <fragment
        android:id="@+id/episodeFragment"
        android:name="com.example.rickandmortywithcash.screens.EpisodeFragment"
        android:label="{characterName} episodes"
        tools:layout="@layout/fragment_episode">
        <argument
            android:name="characterName"
            app:argType="string" />
        <action
            android:id="@+id/action_episodeFragment_to_episodeDetailsFragment"
            app:destination="@id/episodeDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/episodeDetailsFragment"
        android:name="com.example.rickandmortywithcash.screens.EpisodeDetailsFragment"
        android:label="EpisodeDetailsFragment" />
    <argument
        android:name="episode"
        app:argType="string"/>

    <fragment
        android:id="@+id/settingFragment"
        android:name="com.example.rickandmortywithcash.screens.SettingFragment"
        android:label="Setting"/>
</navigation>