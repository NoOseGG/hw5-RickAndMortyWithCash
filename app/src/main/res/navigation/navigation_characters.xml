<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_characters"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.rickandmortywithcash.screens.ListFragment"
        android:label="@string/title_actionbar_list_of_character"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_listFragment_to_detailsFragment"
            app:destination="@id/detailsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_exit_anim"/>
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.rickandmortywithcash.screens.DetailsFragment"
        android:label="{characterName}"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="characterName"
            app:argType="string" />
        <action
            android:id="@+id/action_detailsFragment_to_episodeFragment"
            app:destination="@id/episodeFragment"/>
    </fragment>

    <fragment
        android:id="@+id/episodeFragment"
        android:name="com.example.rickandmortywithcash.screens.EpisodeFragment"
        android:label="{characterName} episodes"
        tools:layout="@layout/fragment_episode">
        <argument
            android:name="characterName"
            app:argType="string" />
        <action
            android:id="@+id/action_episodeFragment_to_episodeDetailsFragment"
            app:destination="@id/episodeDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/episodeDetailsFragment"
        android:name="com.example.rickandmortywithcash.screens.EpisodeDetailsFragment"
        android:label="Episode {KEY_EPISODE_NUMBER} details"
        tools:layout="@layout/fragment_episode_details"/>
    <argument
        android:name="KEY_EPISODE_NUMBER"
        app:argType="string"/>

</navigation>